<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoTextWithIcons" parent="Widget.AppCompat.TextView">
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:textColor">@color/colorCommonBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MajorText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorHardBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorCommonBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonBoldText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorCommonBlack</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BoldHorizontalPressedText" parent="CommonBoldText">
        <item name="android:letterSpacing">-0.025</item>
    </style>

    <style name="CommonNumberPicker">
        <item name="np_dividerColor">@android:color/transparent</item>
        <item name="np_selectedTextColor">@color/colorHardBlack</item>
        <item name="np_selectedTextSize">40sp</item>
        <item name="np_textColor">@color/colorGray</item>
        <item name="np_textSize">40sp</item>
        <item name="np_wheelItemCount">3</item>
        <item name="np_wrapSelectorWheel">true</item>
        <item name="np_fadingEdgeEnabled">false</item>
    </style>

    <style name="SelectedTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotSelectedTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textColor">@color/colorCommonBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButtonCommon" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextButtonPositive" parent="TextButtonCommon">
        <item name="android:background">@drawable/bg_round_2dp_accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextButtonBlue" parent="TextButtonCommon">
        <item name="android:background">@drawable/bg_round_2dp_ecowellbright</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextButtonNegative" parent="TextButtonCommon">
        <item name="android:background">@drawable/bg_round_2dp_gray</item>
        <item name="android:textColor">@color/colorCommonBlack</item>
    </style>

    <style name="TutorialText" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
